{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "prompt-widget",
  "version": "0.1.0",
  "identifier": "com.promptwidget.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Prompt Widget",
        "width": 280,
        "height": 60,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "skipTaskbar": true
      },
      {
        "label": "settings",
        "title": "管理提示词",
        "url": "settings.html",
        "width": 800,
        "height": 600,
        "decorations": true,
        "alwaysOnTop": false,
        "resizable": true,
        "visible": false,
        "closable": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-close",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-set-focus",
            "core:window:allow-start-dragging",
            "core:window:allow-get-all-windows",
            "core:window:allow-set-size",
            "core:webview:allow-webview-position",
            "core:webview:allow-webview-size",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-load",
            "store:allow-has",
            "store:allow-delete",
            "store:allow-clear",
            "store:allow-keys",
            "store:allow-values",
            "store:allow-entries",
            "store:allow-length",
            "clipboard-manager:allow-write-text",
            "clipboard-manager:allow-read-text"
          ]
        },
        {
          "identifier": "settings-capability",
          "description": "Settings window capabilities",
          "windows": ["settings"],
          "permissions": [
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-set-focus",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-load",
            "store:allow-has",
            "store:allow-delete",
            "store:allow-clear",
            "store:allow-keys",
            "store:allow-values",
            "store:allow-entries",
            "store:allow-length"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
